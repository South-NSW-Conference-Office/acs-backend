# =============================================================================
# ACS Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB connection string
# Development: mongodb://localhost:27017/acs_admin
# Production: mongodb+srv://username:password@cluster.mongodb.net/acs_admin
MONGO_URI=mongodb://localhost:27017/acs_admin

# =============================================================================
# JWT Configuration
# =============================================================================
# Use a strong, random secret in production (256 bits recommended)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# Frontend Configuration
# =============================================================================
# Admin frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3001

# =============================================================================
# Email Configuration (SMTP)
# =============================================================================
# SMTP server configuration for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@adventist.org.au
EMAIL_FROM_NAME=Adventist Community Services

# =============================================================================
# Security Configuration
# =============================================================================
# Rate limiting (requests per window)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Request size limits (in bytes)
REQUEST_SIZE_LIMIT=10485760

# Session security
SESSION_SECRET=your-session-secret-change-this
COOKIE_SECURE=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: error, warn, info, verbose, debug
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# File Storage Configuration
# =============================================================================
# Local file storage path
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# AWS S3 Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-southeast-2
# AWS_S3_BUCKET=acs-admin-uploads

# =============================================================================
# Third-party Services
# =============================================================================
# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Development Configuration
# =============================================================================
# Enable/disable features for development
DEBUG=false
ENABLE_DOCS=true
ENABLE_PLAYGROUND=false

# Database seeding
SEED_DATABASE=true
RESET_DATABASE=false

# =============================================================================
# Production Configuration
# =============================================================================
# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/private-key.pem

# Clustering
CLUSTER_ENABLED=false
CLUSTER_WORKERS=0

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# Backup Configuration
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# =============================================================================
# Organization Defaults
# =============================================================================
# Default organization settings
DEFAULT_COUNTRY=Australia
DEFAULT_TIMEZONE=Australia/Sydney
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=AUD